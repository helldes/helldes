<h1>Login</h1>
<h3>Fill in the form</h3>
<%= form_tag('/sessions', method: :post) do %>

    <div class="field">
      <%= label_tag(:email, 'Email') %>
      <%= email_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag(:password, 'Password') %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
<% end %>

